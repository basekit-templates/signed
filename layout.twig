<head>
    <meta charset="utf-8" />
    <title>{{ page.title }}</title>
    <meta name="keywords" content="{{ page.keywords }}" />
    <meta name="description" content="{{ page.description }}" />

    {% if site.favicon %}
        <link rel="icon" href="{{ site.favicon['favicon'] }}" type="image/x-icon" />
        <link rel="SHORTCUT ICON" href="{{ site.favicon['thumbnail'] }}?v={{ "now"|date("U") }}" type="image/x-icon" />
    {% endif %}
    <meta name="viewport" content="width=device-width,initial-scale=1">

    {% include basekit.headScript %}
</head>

<body class="{{ page.backgroundClass }} {% block class %}{% endblock %}">

    <!-- Container -->

    <div class="container">

        <!-- Header Include -->
        {% include "includes/header.twig" %}

        <div class="page-content">

            <!-- Main Widget Zone -->
            {% block content %}
            {% endblock %}

        </div>

            <!-- Footer Include -->
            {% include "includes/footer.twig" %}

        </div>

    {% include basekit.bodyScript %}

     <!-- Nav Menu Script -->

        <script src="//ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js"></script>
           <script>window.jQuery || document.write('<script src="{{ asset('libs/jquery-1.10.2.min.js')}}"><\/script>')
        </script>

        <script>
            // Toggles class open to display/hide the whole navigation
            $( ".navigation-toggle" ).click(function() {
                $( ".bk-extendednavigation" ).toggleClass( "open" );
            });
            // Togglse class open to display/hide folders
            $( ".navigation-item.folder" ).each(function() {
                $( this ).click(function() {
                    $( this ).toggleClass( "open" );
                });
            });
        </script>



        <!-- Masonry -->

            <!-- imagesLoaded -->
        <script src="//cdnjs.cloudflare.com/ajax/libs/jquery.imagesloaded/3.1.8/imagesloaded.pkgd.min.js"></script>

        <!-- Masonry -->
        <script src="//cdnjs.cloudflare.com/ajax/libs/masonry/3.2.1/masonry.pkgd.min.js"></script>

        <script>
            var container = document.querySelector('.gallery-list');

            imagesLoaded( container, function() {
                var msnry = new Masonry( container, {
                    itemSelector: '.gallery-item'
                });
            });
        </script>

</body>
</html>
