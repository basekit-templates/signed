{% extends "layout.twig" %}
{% block class %}bk-pt-blog{% endblock %}
{% block content %}

    <!-- Container -->
    <div class="container">

        <!-- Header Include -->
        {% include "includes/header.twig" %}

        <div class="page-content">

            <div class="bk-pt-blog__search">
                {{widget('blogsearch', 'blogsearch', {})|raw}}
            </div>

            <div class="bk-pt-blog__postslist">
                {{widget('blogpostlist', 'allblogposts', {})|raw}}
            </div>

            <div class="bk-pt-blog-zone">

                <!-- Main Widget Zone -->
                {{zone('main')|raw}}

            </div>

        </div>

            <!-- Footer Include -->
            {% include "includes/footer.twig" %}

    </div>

{% endblock %}



